{% extends 'base.html.twig' %}

{% block title %}Ajouter une adresse - La boutique FR{% endblock %}

{% block content %}

    <h1>Gerer mes adresses</h1>


    <a href="{{ path("account_address")}}">Retour</a>

    <hr>
    
    {{ form_start(form) }}

    <div class="row">

        <div class="col-md-12">{{ form_row(form.name) }}</div>
        <div class="col-md-6">{{ form_row(form.firstname) }}</div>
        <div class="col-md-6">{{ form_row(form.lastname) }}</div>
        <div class="col-md-6">{{ form_row(form.societe) }}</div>
        <div class="col-md-6">{{ form_row(form.address) }}</div>
        <div class="col-md-6">{{ form_row(form.postal_code) }}</div>
        <div class="col-md-6">{{ form_row(form.ville) }}</div>
        <div class="col-md-6">{{ form_row(form.pays) }}</div>
        <div class="col-md-6">{{ form_row(form.telephone) }}</div>
    </div>










    {{ form_end(form) }}

































{% endblock %}
